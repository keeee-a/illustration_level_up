<%= render "shared/header" %>
<div class="index_wrapper">
  <div class="user_info_wrapper">
    <div class="account_place">
      <h2 class="account_letter">account</h2>
      <div class="user_name">
        <%= current_user.name %>
      </div>
    </div>
  </div>

  <div class="reviews_wrapper">
    <p id="notice"><%= notice %></p>

    <h1>Reviews</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Illustration</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.title %></td>
            <td><%= image_tag review.illustration.picture, size:"200x200" %></td>
            <td><%= link_to 'Show', review %></td>
            <td><%= link_to 'Edit', edit_review_path(review) %></td>
            <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
